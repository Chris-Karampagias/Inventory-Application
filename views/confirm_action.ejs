<% extend('index')%>

<form
  class="absolute w-1/2 h-[300px] flex flex-col top-1/2 left-1/2 translate-x-[-50%] translate-y-[-50%] text-3xl"
  action=""
  method="POST"
>
  <div class="flex gap-10">
    <label for="password">Enter secret password:</label>
    <input
      type="text"
      name="password"
      id="password"
      required
      class="border-2 border-black rounded-2xl p-2"
    />
  </div>
  <button
    class="p-2 bg-slate-500 text-white rounded-2xl self-center mt-10 text-5xl"
    type="submit"
  >
    Proceed
  </button>
</form>
<%if(errors){%> <%errors.forEach(error => {%>
<ul class="ml-5 text-3xl font-bold">
  <li><%=error.msg%></li>
</ul>
<%})%> <%}%>

<% extend('index')%>

<h1 class="text-center text-5xl"><%= title%> : <%=name%></h1>
<p class="text-center text-3xl">Are you sure you want to delete this clothe?</p>
<form
  class="text-center flex flex-col gap-10 items-center text-4xl mt-5"
  action=""
  method="POST"
>
  <div class="flex gap-5">
    <label for="password">Type in the secret password: </label>
    <input
      class="border-2 border-black rounded-xl"
      type="text"
      name="password"
      id="password"
      required
    />
  </div>
  <button class="bg-slate-500 p-2 text-white rounded-2xl" type="submit">
    Yes I'm sure!
  </button>
</form>
<%if(errors){%> <%errors.forEach(error => {%>
<ul class="ml-5 text-3xl font-bold">
  <li><%=error.msg%></li>
</ul>
<%})%> <%}%>
